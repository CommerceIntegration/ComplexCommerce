@model ComplexCommerce.Business.Catalog.ICategory

@{
    ViewBag.Title = Model.Title;
    ViewBag.MetaKeywords = Model.MetaKeywords;
    ViewBag.MetaDescription = Model.MetaDescription;
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<fieldset>
    <legend>Category</legend>

    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <ul id="product-list">
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details", "Product", new { id = product.CategoryXProductId, localeId = Model.LocaleId})">
                    <img alt="@product.Name" src="@product.ImageUrl" />
                    <div>@product.Name</div>
                    <div>@product.SKU</div>
                    <div>@string.Format("{0:F}", product.Price)</div>
                </a>
            </li>
        }
    </ul>
</fieldset>

